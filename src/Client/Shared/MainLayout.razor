@inherits LayoutComponentBase
@inject NavigationManager NavigationManager

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
     <MudAppBar Fixed="false" Dense="true">
        <MudText Typo="Typo.h6">Bim Krav</MudText>
        <MudSpacer />
        <MudTooltip Text="API">
            <MudIconButton Icon="@Icons.Filled.Api" Color="Color.Inherit" OnClick="@(() => NavigateToApi())" />
        </MudTooltip>
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private void NavigateToApi()
    {
        NavigationManager.NavigateTo("/swagger", true);
    }
}